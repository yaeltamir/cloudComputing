<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Messages</title>
</head>
<body>
  <h1>Your Messages</h1>
  <ul id="messageList"></ul>

  <script>
    // Replace "localhost" and port with your actual server URL if necessary
    const userId = "<%= userId %>"; // Pass userId from the server to use in connection URL
    const ws = new WebSocket(`ws://localhost:3000?userId=${userId}`);

    // Listen for incoming messages and update the message list
    ws.addEventListener('message', (event) => {
      const data = JSON.parse(event.data);
      
      // Create a new list item for each received message
      const messageItem = document.createElement("li");
      messageItem.textContent = `New message: ${data.message}`;
      document.getElementById("messageList").appendChild(messageItem);
    });

    // Handle WebSocket connection close event
    ws.addEventListener('close', () => {
      console.log("WebSocket connection closed");
    });
  </script>
</body>
</html>
