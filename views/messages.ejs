<!-- views/messages.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Messages for User <%= userId %></title>
</head>
<body>
  <h1>Messages for User <%= userId %></h1>
  <ul id="messages">
    <% messages.forEach(message => { %>
      <li><%= message %></li>
    <% }) %>
  </ul>

  <script>
    const userId = '<%= userId %>';
    const ws = new WebSocket('ws://' + window.location.host);

    // Send user ID upon connection to register for real-time updates
    ws.addEventListener('open', () => {
      ws.send(userId);
    });

    // Listen for incoming messages and update the DOM
    ws.addEventListener('message', (event) => {
      const newMessages = JSON.parse(event.data);
      const messagesList = document.getElementById('messages');
      
      // Append each new message to the messages list
      newMessages.forEach((message) => {
        const li = document.createElement('li');
        li.textContent = message;
        messagesList.appendChild(li);
      });
    });
  </script>
</body>
</html>
