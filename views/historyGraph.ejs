        <div class="container px-5 my-5">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Sugar Level Graph</span></h1>
            </div>
            
            <canvas id="sugarLevelChart"></canvas> <!-- הגרף יוצג כאן -->
        </div>

        <script>
            // הנתונים שמגיעים מהשרת
            const dates = <%- JSON.stringify(dates) %>;
            const sugarLevels = <%- JSON.stringify(sugarLevels) %>;
            const mealImages = <%- JSON.stringify(mealImages) %>;
    
              // שליפת הצבעים המוגדרים ב־CSS
            const lineColor = getComputedStyle(document.querySelector('.text-gradient')).color;
            const tooltipTextColor = getComputedStyle(document.querySelector('.fw-bolder')).color;
  

            const ctx = document.getElementById('sugarLevelChart').getContext('2d');


            // יצירת גרדיאנט לצבע הקו בגרף
            const gradient = ctx.createLinearGradient(0, 0, ctx.canvas.width, 0);
            gradient.addColorStop(0, 'rgba(75, 192, 192, 1)'); // התחלה של הגרדיאנט
            gradient.addColorStop(1, 'rgba(75, 102, 255, 1)'); // סוף של הגרדיאנט


            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: dates,
                    datasets: [{
                        label: 'Sugar level over time',
                        data: sugarLevels,
                        borderColor: gradient, // צבע קו גרדיאנטי
                        tension: 0.1
                        
                    }]
                },
                options: {
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Date & Time',
                                color: tooltipTextColor // צבע הכיתוב מה־CSS
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Sugar level',
                                color: tooltipTextColor // צבע הכיתוב מה־CSS
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            enabled: false, // ביטול ה־tooltip הרגיל
                            external: function(context) {
                                let tooltipEl = document.getElementById('chartjs-tooltip');
        
                                // יצירת אלמנט tooltip אם הוא לא קיים
                                if (!tooltipEl) {
                                    tooltipEl = document.createElement('div');
                                    tooltipEl.id = 'chartjs-tooltip';
                                    tooltipEl.style.position = 'absolute';
                                    tooltipEl.style.pointerEvents = 'none';
                                    tooltipEl.style.opacity = 0;
                                    document.body.appendChild(tooltipEl);
                                }
        
                                const tooltipModel = context.tooltip;
        
                                // החבאת tooltip אם אין נתונים להצגה
                                if (tooltipModel.opacity === 0) {
                                    tooltipEl.style.opacity = 0;
                                    return;
                                }
        
                                // מקבל את התמונה מהמערך לפי האינדקס של הנקודה
                                const dataIndex = tooltipModel.dataPoints[0].dataIndex;
                                const mealImage = mealImages[dataIndex];
                                const sugarLevel = sugarLevels[dataIndex];
                                const date = dates[dataIndex];
        
                                // עדכון התוכן של ה-tooltip עם התמונה והנתונים
                                tooltipEl.innerHTML = `
                                    <div style="text-align: center; padding: 8px; background: rgba(0, 0, 0,0); color: rgba(75, 192, 192, 1); border-radius: 4px;">
                                        <div >Sugar level: ${sugarLevel}</div>
                                        <div>Date & Time: ${date}</div>
                                        ${mealImage ? `<img src="${mealImage}" alt="Meal Image" style="width: 70px; height: 60px; margin-top: 5px;">` : ''}
                                    </div>
                                `;
        
                                // הצגת ה-tooltip במקום המתאים
                                tooltipEl.style.opacity = 1;
                                tooltipEl.style.left = tooltipModel.caretX + 'px';
                                tooltipEl.style.top = tooltipModel.caretY + 'px';
                            }
                        }
                    }
                }
            });
        </script>
    </main>
</body>
</html>
