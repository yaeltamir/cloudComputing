            <form id="filterForm" action="/historyGraph" method="GET" class="container px-5 my-5">
                <div class="mb-4 text-start">
                    <h2 class="display-9 fw-bolder mb-0"><span class="text-gradient d-inline">Filter Dates</span></h2>
                </div>
