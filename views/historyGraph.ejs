                        <input type="date" id="startDate" name="startDate" class="form-control">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="endDate" class="form-label fw-bolder text-primary">End Date:</label>
                        <input type="date" id="endDate" name="endDate" class="form-control">
                    </div>
                    <div class="row"> 
                        <div class="col-md-2 d-flex justify-content-start"> <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </form>
            
            

            <canvas id="sugarLevelChart"></canvas> <!-- הגרף יוצג כאן -->
        </div>

        <script>
            // הנתונים שמגיעים מהשרת
            const dates = <%- JSON.stringify(dates) %>;
            const sugarLevels = <%- JSON.stringify(sugarLevels) %>;
            const mealImages = <%- JSON.stringify(mealImages) %>;
    
              // שליפת הצבעים המוגדרים ב־CSS
            const lineColor = getComputedStyle(document.querySelector('.text-gradient')).color;
            const tooltipTextColor = getComputedStyle(document.querySelector('.fw-bolder')).color;
  

            const ctx = document.getElementById('sugarLevelChart').getContext('2d');


            // יצירת גרדיאנט לצבע הקו בגרף
            const gradient = ctx.createLinearGradient(0, 0, ctx.canvas.width, 0);
            gradient.addColorStop(0, 'rgba(75, 192, 192, 1)'); // התחלה של הגרדיאנט
            gradient.addColorStop(1, 'rgba(75, 102, 255, 1)'); // סוף של הגרדיאנט


            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: dates,
                    datasets: [{
                        label: 'Sugar level over time',
                        data: sugarLevels,
                        borderColor: gradient, // צבע קו גרדיאנטי
                        tension: 0.1
                        
                    }]
                },
                options: {
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Date & Time',
                                color: tooltipTextColor // צבע הכיתוב מה־CSS
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Sugar level',
                                color: tooltipTextColor // צבע הכיתוב מה־CSS
                            }
                        }
                    },
                    //--------------------------------
                    plugins: {
                        tooltip: {
                            enabled: false, // מבטלים את ה-tooltip המובנה
                            external: function(context) {
                                // מתייחסים ל-tooltip החיצוני שלנו
                                const tooltipEl = document.getElementById('chartjs-tooltip');
            
                                // אם ה-tooltip לא קיים, ניצור אותו
                                if (!tooltipEl) {
                                    const tooltip = document.createElement('div');
                                    tooltip.id = 'chartjs-tooltip';
                                    tooltip.style.position = 'absolute';
                                    tooltip.style.pointerEvents = 'none';
                                    tooltip.style.opacity = 0;
                                    document.body.appendChild(tooltip);
                                }
            
                                // נקודת המידע על הגרף
                                const { tooltip } = context;
                                if (tooltip.opacity === 0) {
                                    tooltipEl.style.opacity = 0;
                                    return;
                                }
            
                                // נתוני ה-tooltip
                                const index = tooltip.dataPoints[0].dataIndex;
                                const sugarLevel = sugarLevels[index];
                                const date = dates[index];
                                const mealImage = mealImages[index]; // תמונת הארוחה
            
                                // עדכון התוכן של ה-tooltip
                                tooltipEl.innerHTML = `
                                    <div style="text-align: center; padding: 8px; background: rgba(0, 0, 0, 0); color: rgba(75, 192, 192, 1); border-radius: 4px;">
                                        <div>Sugar level: ${sugarLevel}</div>
                                        <div>Date & Time: ${date}</div>
                                        ${mealImage ? `<img src="${mealImage}" alt="Meal Image" style="width: 70px; height: 60px; margin-top: 5px;">` : ''}
                                    </div>
                                `;
            
                                // הגדרת המיקום של ה-tooltip ליד הנקודה
                                const position = context.chart.canvas.getBoundingClientRect();
                                tooltipEl.style.left = position.left + window.pageXOffset + tooltip.caretX + 'px';
                                tooltipEl.style.top = position.top + window.pageYOffset + tooltip.caretY + 'px';
                                tooltipEl.style.opacity = 1;
                            }
                        }
                    }
                }
            });
        </script>
